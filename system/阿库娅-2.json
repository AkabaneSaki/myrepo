    "findRegex": "/<aqua_bless name=\"(.*?)\" fp=\"(.*?)\">([\\s\\S]*?)<\\/aqua_bless>/g",
    "replaceString": "<div class=\"aqua-ultra-bless\">\n<style>\n    @import url('https://fonts.googleapis.com/css2?family=Noto+Serif+SC:wght@700&display=swap');\n\n    .aqua-ultra-bless {\n        --glitter-gold: #ffd700;\n        --divine-blue: #0091ff;\n        --night-bg: linear-gradient(135deg, #050a15 0%, #10182b 100%);\n        margin: 25px 0;\n        width: 100%;\n        display: flex;\n        flex-direction: column;\n        align-items: center;\n        font-family: 'Noto Serif SC', serif;\n    }\n\n    /* === 扫光金箔药丸 (Trigger) === */\n    .ultra-pill-trigger {\n        list-style: none;\n        display: flex;\n        align-items: center;\n        justify-content: center;\n        padding: 0 45px;\n        height: 50px;\n        background: #0a111f;\n        border: 2px solid var(--glitter-gold);\n        border-radius: 50px;\n        cursor: pointer;\n        position: relative;\n        z-index: 100;\n        overflow: hidden;\n        box-shadow: 0 0 15px rgba(255, 215, 0, 0.3);\n        transition: all 0.3s ease;\n    }\n\n    /* 药丸扫光动画 */\n    .ultra-pill-trigger::after {\n        content: \"\";\n        position: absolute;\n        top: 0; left: -100%;\n        width: 100%; height: 100%;\n        background: linear-gradient(90deg, transparent, rgba(255, 215, 0, 0.4), transparent);\n        animation: pill-shimmer 3s infinite;\n    }\n\n    .pill-gold-text {\n        color: var(--glitter-gold);\n        font-size: 16px;\n        font-weight: 700;\n        letter-spacing: 5px;\n        text-shadow: 0 0 10px rgba(255, 215, 0, 0.5);\n        z-index: 2;\n    }\n\n    /* === 星尘神谕盒 (Content) === */\n    .ultra-divine-vault {\n        width: 95%;\n        max-width: 780px;\n        margin-top: -15px;\n        background: var(--night-bg);\n        border: 1.5px solid rgba(255, 215, 0, 0.5);\n        border-radius: 12px;\n        padding: 45px 35px 30px;\n        box-shadow: 0 20px 50px rgba(0,0,0,0.8), inset 0 0 30px rgba(0, 145, 255, 0.1);\n        position: relative;\n        overflow: hidden;\n        transform-origin: top;\n        animation: vault-expand 0.6s cubic-bezier(0.23, 1, 0.32, 1) forwards;\n    }\n\n    /* 动态星尘粒子层 */\n    .star-dust {\n        position: absolute;\n        top: 0; left: 0; width: 100%; height: 100%;\n        background-image: \n            radial-gradient(2px 2px at 20% 30%, #fff, transparent),\n            radial-gradient(1.5px 1.5px at 50% 70%, var(--glitter-gold), transparent),\n            radial-gradient(2px 2px at 80% 40%, #fff, transparent),\n            radial-gradient(1px 1px at 10% 80%, var(--glitter-gold), transparent),\n            radial-gradient(2.5px 2.5px at 90% 90%, #fff, transparent);\n        background-size: 300px 300px;\n        animation: star-move 20s linear infinite;\n        opacity: 0.6;\n        pointer-events: none;\n    }\n\n    .vault-title {\n        color: var(--glitter-gold);\n        font-size: 1.6em;\n        text-align: center;\n        margin-bottom: 25px;\n        font-weight: 700;\n        letter-spacing: 6px;\n        text-shadow: 0 0 20px rgba(255, 215, 0, 0.8);\n    }\n\n    .vault-content {\n        color: #f0faff;\n        font-size: 1.2em;\n        line-height: 2;\n        text-align: center;\n        white-space: pre-wrap;\n        position: relative;\n        z-index: 10;\n        text-shadow: 0 2px 10px rgba(0,0,0,0.5);\n    }\n\n    .vault-footer-deco {\n        margin-top: 35px;\n        display: flex;\n        justify-content: space-between;\n        align-items: center;\n        border-top: 1px solid rgba(255, 215, 0, 0.2);\n        padding-top: 15px;\n        font-size: 0.85em;\n        color: var(--glitter-gold);\n        opacity: 0.7;\n    }\n\n    /* 动画定义 */\n    @keyframes pill-shimmer {\n        0% { left: -100%; }\n        30%, 100% { left: 100%; }\n    }\n\n    @keyframes vault-expand {\n        0% { opacity: 0; transform: scaleY(0.5) translateY(-20px); filter: brightness(2); }\n        100% { opacity: 1; transform: scaleY(1) translateY(0); filter: brightness(1); }\n    }\n\n    @keyframes star-move {\n        from { background-position: 0 0; }\n        to { background-position: 300px 600px; }\n    }\n\n    /* 交互逻辑 */\n    details > summary::-webkit-details-marker { display: none; }\n    details:not([open]) .ultra-divine-vault { display: none; }\n    details[open] .ultra-pill-trigger { \n        background: var(--glitter-gold); \n        box-shadow: 0 0 30px var(--glitter-gold);\n    }\n    details[open] .pill-gold-text { color: #050a15; text-shadow: none; }\n</style>\n\n<details open>\n    <summary class=\"ultra-pill-trigger\">\n        <span class=\"pill-gold-text\">✦ AXIS BLESSING UNSEALED ✦</span>\n    </summary>\n    \n    <div class=\"ultra-divine-vault\">\n        <div class=\"star-dust\"></div>\n        <div class=\"vault-title\">『 $1 』</div>\n        <div class=\"vault-content\">$3</div>\n        \n        <div class=\"vault-footer-deco\">\n            <span style=\"letter-spacing: 2px;\">DIVINE STATUS: ACTIVE</span>\n            <span style=\"border: 1px solid var(--glitter-gold); padding: 0 10px; border-radius: 4px;\">FP COST: $2</span>\n        </div>\n    </div>\n</details>\n</div>",
