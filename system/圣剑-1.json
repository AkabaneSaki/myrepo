    "replaceString": "<div class=\"jrpg-container\"><div class=\"jrpg-sidebar\"><div class=\"jrpg-nametag\">$1</div><div class=\"jrpg-portrait-box\"><div class=\"jrpg-face face-$2\"></div></div></div><div class=\"jrpg-textbox\"><div class=\"jrpg-text-content\">$3</div><div class=\"jrpg-next-arrow\">▼</div></div></div><style>/* JRPG 容器主样式 */.jrpg-container { --bg-top: #002b5e; --bg-bot: #001229; --border-color: #ffffff; --text-color: #ffffff; display: flex; align-items: flex-start; background: linear-gradient(180deg, var(--bg-top) 0%, var(--bg-bot) 100%); border: 3px solid var(--border-color); border-radius: 4px; box-shadow: 0 0 0 2px #000, 0 4px 8px rgba(0,0,0,0.5); padding: 12px; margin: 10px 0; font-family: 'Microsoft YaHei', sans-serif; position: relative; gap: 12px; max-width: 100%; box-sizing: border-box;}/* 左侧侧边栏(名字+头像) */.jrpg-sidebar { display: flex; flex-direction: column; align-items: center; width: 90px; flex-shrink: 0;}/* 名字牌 */.jrpg-nametag { background: rgba(0,0,0,0.6); color: #ffd700; border: 1px solid #ffd700; font-size: 12px; padding: 2px 6px; margin-bottom: 4px; border-radius: 2px; text-shadow: 1px 1px 0 #000; font-weight: bold; text-align: center; width: 100%; box-sizing: border-box; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;}/* 头像框 */.jrpg-portrait-box { width: 80px; height: 80px; border: 2px solid var(--border-color); background: #000; box-shadow: inset 0 0 10px rgba(0,0,0,0.8);}/* 表情映射逻辑 */.jrpg-face { width: 100%; height: 100%; background-size: cover; background-position: center; background-repeat: no-repeat; background-image: url('https://files.catbox.moe/5fo05k.png'); /* 默认/通常 */}.face-害羞 { background-image: url('https://files.catbox.moe/6oi8zf.png') !important; }.face-无语 { background-image: url('https://files.catbox.moe/vba97p.png') !important; }.face-思考 { background-image: url('https://files.catbox.moe/s1c08r.png') !important; }.face-性高潮 { background-image: url('https://files.catbox.moe/i5ma1q.png') !important; }.face-激动 { background-image: url('https://files.catbox.moe/pg34ua.png') !important; }.face-通常 { background-image: url('https://files.catbox.moe/5fo05k.png') !important; }.face-震惊 { background-image: url('https://files.catbox.moe/oh4zgv.png') !important; }.face-高兴 { background-image: url('https://files.catbox.moe/gu2c94.png') !important; }/* 右侧对话框 */.jrpg-textbox { flex-grow: 1; position: relative; min-height: 80px; display: flex; flex-direction: column;}/* 对话文字 */.jrpg-text-content { color: var(--text-color); font-size: 1.05em; line-height: 1.5; text-shadow: 1px 1px 0 #000000; white-space: pre-wrap;}/* 倒三角动画 */.jrpg-next-arrow { position: absolute; bottom: 0; right: 0; color: #ffd700; font-size: 14px; animation: bounce 1s infinite;}@keyframes bounce { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(3px); }}/* 手机端适配 */@media only screen and (max-width: 600px) { .jrpg-container { flex-direction: column; align-items: flex-start; gap: 5px; } .jrpg-sidebar { flex-direction: row; width: 100%; gap: 10px; border-bottom: 1px solid rgba(255,255,255,0.2); padding-bottom: 5px; margin-bottom: 5px; } .jrpg-nametag { width: auto; margin-bottom: 0; font-size: 14px; } .jrpg-portrait-box { width: 50px; height: 50px; } .jrpg-textbox { min-height: auto; width: 100%; }}</style>",
